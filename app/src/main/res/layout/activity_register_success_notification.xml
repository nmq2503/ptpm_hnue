<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.auth.RegisterSuccessNotificationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/img_background_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:src="@drawable/img_success_notification"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="Chúc mừng!!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/startColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Tài khoản của bạn đã sẵn sàng!!"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnStart"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_bg_button"
            android:text="Bắt đầu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="175dp"
            android:layout_height="60dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>