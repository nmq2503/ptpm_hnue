<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="27dp">

            <RelativeLayout
                android:id="@+id/food_info_layout"
                android:layout_width="match_parent"
                android:layout_height="335.6dp">

                <ImageView
                    android:id="@+id/food_detail_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:background="@drawable/rou_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/return_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/return_bg"
                    android:drawableStart="@drawable/return_button"
                    android:padding="23dp"/>

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/food_detail_placeholder"
                    android:layout_marginTop="10dp"
                    android:text="Mons ăn"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/rating_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/food_name"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/star" />

                    <TextView
                        android:id="@+id/average_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(30+)"
                        android:textColor="#9796A1" />

                    <TextView
                        android:id="@+id/see_review_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="See Review"
                        android:textColor="#94DE97" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/price_quantity_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rating_section">

                    <LinearLayout
                        android:id="@+id/price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="20sp"
                            android:textColor="#4CAF50" />

                        <TextView
                            android:id="@+id/price_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.50"
                            android:textColor="#4EAF51"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/decreaseItemDetailQuantity"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:textColor="#FFF"
                            android:background="@drawable/sub_button_bg"
                            android:drawableStart="@drawable/sub_button"
                            android:gravity="center"
                            android:padding="12dp"/>

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="02" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/increaseItemDetailQuantity"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:textColor="#FFF"
                            android:background="@drawable/add_button_bg"
                            android:drawableStart="@drawable/add_button"
                            android:gravity="center"
                            android:padding="12dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/ingredient_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="........ạdbdhdhgdhhshsjjdb" />
            <LinearLayout
                android:id="@+id/additional_topping_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:text="Choice of Add On"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/topping_placeholder_1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pepper Julienned"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layoutDirection="rtl"
                        android:text="$2.30+"
                        android:checked="true"
                        android:layout_gravity="end|center_vertical"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/topping_placeholder_2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baby Spinach"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layoutDirection="rtl"
                        android:text="$4.70+"
                        android:layout_gravity="end|center_vertical"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/topping_placeholder_3"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masroom"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layoutDirection="rtl"
                        android:text="$2.50+"
                        android:layout_gravity="end|center_vertical"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/additional_topping_layout"
        android:layout_marginTop="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
