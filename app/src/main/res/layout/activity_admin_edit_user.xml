<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".admin.views.manager_users.AdminEditUserActivity">

    <LinearLayout
        android:background="@drawable/img_background_app"
        android:paddingHorizontal="25dp"
        android:paddingTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="SỬA THÔNG TIN\nNGƯỜI DÙNG"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#09051C"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/ivLogoAdmin"
                        android:src="@drawable/img_logo_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="* "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#C52023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Nhập tên người dùng"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtNameUser"
                        android:hint="Tên"
                        android:padding="20dp"
                        android:textColorHint="#4DDA6317"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/custom_bg_edt_manager_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="* "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#C52023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Nhập email người dùng"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtEmailUser"
                        android:hint="Email"
                        android:padding="20dp"
                        android:textColorHint="#4DDA6317"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/custom_bg_edt_manager_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="* "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#C52023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Nhập mật khẩu người dùng"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtPasswordUser"
                        android:hint="Mật khẩu"
                        android:padding="20dp"
                        android:textColorHint="#4DDA6317"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/custom_bg_edt_manager_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="* "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#C52023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Chọn vai trò"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroupRole"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioUser"
                            android:text="Người dùng"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:button="@drawable/custom_rad_btn_manager"
                            android:paddingStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioManager"
                            android:text="Chủ cửa hàng"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:button="@drawable/custom_rad_btn_manager"
                            android:paddingStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Thêm ảnh"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivAddPicture"
                            android:src="@drawable/img_manager_add_picture"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"/>

                        <ImageView
                            android:id="@+id/ivRemovePicture"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_delete_search"
                            android:visibility="gone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="Remove picture"
                            android:onClick="removePicture" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="35dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSave"
                        android:text="Lưu"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_add_btn"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="85dp"
                        android:layout_height="30dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCancel"
                        android:text="Hủy"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_delete_btn"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="85dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>