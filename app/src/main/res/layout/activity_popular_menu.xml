<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.Restaurant.PopularMenuActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/btnBack2"
                android:src="@drawable/arrow"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Popular menu"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pizza1"
                    android:scaleType="centerCrop" />
                <TextView
                    android:text="Originating from Italy, it traditionally consists of a flat, round base made from wheat dough, baked to perfection with a variety of toppings."
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/itemCrab"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img"
                    android:scaleType="centerCrop" />
                <TextView
                    android:text="Spicy Crab is a flavorful seafood dish that combines the natural sweetness of crab with a rich and spicy seasoning"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>