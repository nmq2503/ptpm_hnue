<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E9BFCD"
    android:gravity="center">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/product_image_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/monan"
        android:layout_gravity="center"
        android:onClick="onProductClicked" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/product_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Spicy Fresh Crab"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:onClick="onProductClicked"/>

    <!-- Giá sản phẩm -->
    <TextView
        android:id="@+id/product_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="$35"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Mô tả sản phẩm -->
    <TextView
        android:id="@+id/product_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delicious spicy crab dish"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"/>
</LinearLayout>